{% extends 'base.html.twig' %}

{% block body %}
   <div class="box">
            <div class="box-header">
              <h3 class="box-title">Category Informations</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Action</th>
                        <td>
                            <div class="btn-group">
                              <a class="btn btn-success" href="{{ path('category_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i></a>
                              {{ form_start(delete_form) }}
                               <a class="btn btn-danger" href="{{ path('category_delete', { 'id': category.id }) }}"><i class="fa fa-trash"></i></a>
                               {{ form_end(delete_form) }}
                            </div>
                        </td>
                    </tr>
        </tbody>
    </table>

{% endblock %}
