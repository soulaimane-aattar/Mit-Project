{% extends 'base.html.twig' %}

{% block body %}

    <div class="box">
            <div class="box-header">
              <h3 class="box-title">User Informations</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                    <th>Action</th>
                        <td>
                            <div class="btn-group">
                              <a class="btn btn-success" href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-edit"></i></a>
                               <a class="btn btn-danger" href="{{ path('user_delete', { 'id': user.id }) }}"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
            </tr>
        </tbody>
               
               </table>
            </div>
            <!-- /.box-body -->
          </div>
{% endblock %}